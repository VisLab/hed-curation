{
   "Name":"emotion_leftversusright",
   "BIDSModelVersion":"1.0.0",
   "Description":"Test difference button press with left versus right hand",
   "Input":{
      "task":"stopsignal"
   },
   "Nodes":[
      {
         "Level":"run",
         "Name":"subject",
         "GroupBy":["subject"],
         "Transformations":{
            "Transformer":"pybids-transforms-v1",
            "Instructions":[
               {
                  "Name":"Factor",
                  "Input":[
                     "response_hand"
                  ]
               },
               {
                  "Name":"Convolve",
                  "Input":[
                     "response_hand.left",
                     "response_hand.right"
                  ],
                  "Model":"spm"
               }
            ]
         },
         "Model":{
            "X":[
               "response_hand.left",
               "response_hand.right",
               "framewise_displacement",
               "trans_x",
               "trans_y",
               "trans_z",
               "rot_x",
               "rot_y",
               "rot_z",
               "a_comp_cor_00",
               "a_comp_cor_01",
               "a_comp_cor_02",
               "a_comp_cor_03",
               "a_comp_cor_04",
               "a_comp_cor_05",
               1
            ]
         },
         "DummyContrasts":{
            "Conditions":[
               "response_hand.left",
               "response_hand.right"
            ],
            "Test":"t"
         },
         "Contrasts":[
            {
               "Name":"left_bt_right",
               "ConditionList":[
                  "response_hand.left",
                  "response_hand.right"
               ],
               "Weights":[
                  1,
                  -1
               ],
               "Test":"t"
            },
            {
               "Name":"right_bt_left",
               "ConditionList":[
                  "response_hand.left",
                  "response_hand.right"
               ],
               "Weights":[
                  -1,
                  1
               ],
               "Test":"t"
            },
            {
               "Name":"task_vs_baseline",
               "ConditionList":[
                  "response_hand.left",
                  "response_hand.right"
               ],
               "Weights":[
                  0.5,
                  0.5
               ],
               "Test":"t"
            }
         ]
      },
      {
         "Level":"dataset",
         "Name":"t-test",
         "GroupBy":["contrast"],
         "Model":{
            "X":[
               1
            ],
            "Type":"glm"
         },
         "DummyContrasts":{
            "Test":"t"
         }
      },
      {
         "Level":"dataset",
         "Name":"F-test",
         "GroupBy": [],
         "Model":{
            "X":[
                "response_hand.left",
                "response_hand.right"
            ],
            "Type":"glm"
         },
         "Contrasts":[
            {
               "Name":"any_go_trial",
               "ConditionList":[
                  "response_hand.left",
                  "response_hand.right"
               ],
               "Weights":[
                  [
                     1,
                     0
                  ],
                  [
                     0,
                     1
                  ]
               ],
               "Test":"F"
            }
         ]
      }
   ],
   "Edges":[
      {
         "Source":"subject",
         "Destination":"t-test",
         "Filter":{
            "contrast":[
               "task_vs_baseline",
               "left_bt_right",
							 "right_bt_left"
            ]
         }
      },
      {
         "Source":"subject",
         "Destination":"F-test",
         "Filter":{
            "contrast":[
               "response_hand.left",
               "response_hand.right"
            ]
         }
      }
   ]
}
